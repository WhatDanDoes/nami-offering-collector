<% include _partials/head %>
  <body>
    <header>
      <nav>
        <a id="home-link" href="/">
          <img alt="Logo" src="/images/offering-plate.png" height="70">
        </a>
        <ul>
          <li id="connect-metamask">
            <a href="/auth/disconnect">
              <button id="disconnect-metamask-button" type="submit">Disconnect Metamask</button>
            </a>
          </li>
        </ul>
      </nav>
      <br>
      <a href="/">
        <button id="donate-button">Donate</button>
      </a>
      <a href="/transaction">
        <button id="transaction-button">Transactions</button>
      </a>
      <% include _partials/messages %>
    </header>
    <main>
      <section>
        <form id="account-details" action="/account?_method=PUT" method="post">
          <header>
            <h2>Your Account Details</h2>
          </header>
          <label>Ethereum Address:</label>
          <input id="address-dummy" type="text" value="<%= agent.publicAddress %>" disabled>
          <label for="name">
            Name:
            <%- errors.name ? `<div class="form-error">${errors.name.message}</div>` : '' %>
          </label>
          <input type="text" name="name" placeholder="Anonymous" value="<%= agent.name %>">
          <label for="streetAddress">
            Street Address:
            <%- errors.streetAddress ? `<div class="form-error">${errors.streetAddress.message}</div>` : '' %>
          </label>
          <input type="text" name="streetAddress" value="<%= agent.streetAddress %>">
          <label for="city">
            City:
            <%- errors.city ? `<div class="form-error">${errors.city.message}</div>` : '' %>
          </label>
          <input type="text" name="city" value="<%= agent.city %>">
          <label for="province">
            Province:
            <%- errors.province ? `<div class="form-error">${errors.province.message}</div>` : '' %>
          </label>
          <input type="text" name="province" value="<%= agent.province %>">
          <label for="country">
            Country:
            <%- errors.country ? `<div class="form-error">${errors.country.message}</div>` : '' %>
          </label>
          <input type="text" name="country" value="<%= agent.country %>">
          <label for="phone">
            Phone:
            <%- errors.phone ? `<div class="form-error">${errors.phone.message}</div>` : '' %>
          </label>
          <input type="text" name="phone" value="<%= agent.phone %>">
          <label for="email">
            Email:
            <%- errors.email ? `<div class="form-error">${errors.email.message}</div>` : '' %>
          </label>
          <input type="email" name="email" value="<%= agent.email %>">
          <button id="update-account-button" type="submit" disabled>Update</button>
        </form>
      </section>
      <section>
        <a href="/">
          <button id="make-a-donation-button">Make a donation</button>
        </a>
      </section>
    </main>
    <script>
      document.addEventListener('DOMContentLoaded', function(event) {
        document.getElementById('account-details').addEventListener('input', () => {
          document.getElementById('update-account-button').disabled = false;
        }, { once: true });
      });
    </script>
  </body>
</html>
